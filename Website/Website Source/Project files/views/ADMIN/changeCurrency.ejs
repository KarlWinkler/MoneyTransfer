						<p class="up">Choose the new currency</p>
					</div>


					<div class="input-group mb-3 mt-5">
					  <select name='currency' class="form-select" id="inputGroupSelect01">
						<option value="0" disabled selected>choose a currency</option>
						<%- currencyOptions %>
					  </select>
					</div>
					
					<div class="col-12 title pb-4">
						<button class="btn btn-primary" type="submit" name="submit">Change</button>				
                    </div>

				</form>


			</div>
		
		</div>
		<form class="col-12 title pb-4" action="/admin-home" method="get">
			<button class="btn btn-secondary" style="width: 20%" type="submit" name="submit">Home</button>				
		</form>

	</section>

